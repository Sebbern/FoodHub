@model Item

<div class="col">
    <div>
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        <div>
            <div class="d-flex justify-content-between mt-2">
                <h5 class="text-start">
                    <a asp-controller="Item"
                       asp-action="Details"
                       asp-route-id="@Model.ItemId">@Model.Name</a>
                </h5>
            </div>
            <div class="mt-2">
                <p><strong>Energy:</strong> @Model.Energy kcal</p>
                <p><strong>Carbohydrates:</strong> @Model.Carbohydrate g</p>
                <p><strong>Total Fat:</strong> @Model.TotalFat g</p>
                <p><strong>Saturated Fat:</strong> @Model.SaturatedFat g</p>
                <p><strong>Unsaturated Fat:</strong> @Model.UnsaturedFat g</p>
                <p><strong>Sugar:</strong> @Model.Sugar g</p>
                <p><strong>Dietary Fiber:</strong> @Model.DietaryFiber g</p>
                <p><strong>Protein:</strong> @Model.Protein g</p>
                <p><strong>Salt:</strong> @Model.Salt g</p>
            </div>
        </div>
    </div>
</div>
